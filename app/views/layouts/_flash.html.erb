<div id="flash_notice" class="flash" >
  <% flash.each do |flash_type, message| %>
    <% 
      if flash_type == 'notice'
        cls = "flash__success"
      elsif flash_type == 'error'
        cls = "flash__error"
      elsif flash_type == 'success'
        cls = "flash__message"
      end 
    %>
    <div 
      id='flash_message'
      class=<%= cls %>
      data-controller="removals"
      data-action="animationend->removals#remove"
    >
      <%= message %>
    </div>
  <% end %>
</div>